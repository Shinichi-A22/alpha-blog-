<%= render 'shared/error', obj: @article%>


<div class='row'>
  <div class='col-xs-55'>
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %> 
      <div class="form-group">
        <div class="control-label col-xs-5">
          <%=  f.label :title %> 
        </div>  
        <div class="col-xs-5">
          <%=  f.text_field :title, columns: 5,  class: "form=control", placeholder:"Title of article", autofocus: true %>
        </div>
      </div>
          
        <div class="form-group">
          <div class="control-label col-xs-5">
            <%= f.label :description%>
          </div>
            <div class="col-xs-5">
              <%= f. text_area :description, rows: 10, class: "form=control", placeholder: "Description of the article"%>
            </div>  
        </div>
        <div class="form-group">
          <div class="col-sm-offset-5 col-sm-5">
            <%= f.submit class: 'btn btn-primary btn-lg'%>
          </div>
        </div>  
      <% end %>
        <div class="col-xs-6 col-xs-offset-5">
            [<%= link_to "Back to HOME", articles_path%>]
          </div>
          
  </div>
</div>